<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <webmasterei translate="label" module="slider">
            <label>webmasterei Extensions</label>
            <sort_order>100</sort_order>
        </webmasterei>
    </tabs>
    <sections>
        <slider translate="label" module="slider">
            <label>Slider</label>
            <tab>webmasterei</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <slider_blocks translate="label" module="slider">
                    <label>Style Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <framework translate="label">
                            <label>Select if you use one of the frameworks</label>
                            <comment>The Slider can use your own styles. Select the Framework you are using or select none to use independent styles.</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>slider/frameworkselect</source_model>
                        </framework>
                    </fields>
                </slider_blocks>
            </groups>
        </slider>
    </sections>
</config>